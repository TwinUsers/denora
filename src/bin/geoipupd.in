# see the file COPYING for details.
#
# $Id$
#

rm -f @DATDEST@/GeoIP*.dat
wget -q http://geolite.maxmind.com/download/geoip/database/GeoLiteCountry/GeoIP.dat.gz -O @DATDEST@/GeoIP.dat.gz
wget -q http://geolite.maxmind.com/download/geoip/database/GeoIPv6.dat.gz -O @DATDEST@/GeoIPv6.dat.gz
gzip -qd @DATDEST@/GeoIP.dat.gz
gzip -qd @DATDEST@/GeoIPv6.dat.gz
@BINDEST@/denorarc rehash
